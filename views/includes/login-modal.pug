#loginModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modalLabel', aria-hidden='true')
  .modal-dialog.modal-sm(role='document')
    .modal-content
      .modal-header
        h5#modalLabel.modal-title User Login
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') ×
      .modal-body
        form(action="/users/login" method="POST")
          .form-group
            label(for="inputEmail") Email address:
            input#inputEmail.form-control(name="email" type="email" placeholder="Enter email")
          .form-group
            label(for="inputPassword") Password:
            input#inputPassword.form-control(name="password" type="password" placeholder="••••••••")
          small.float-left Not registered yet?
          small.float-right
            strong
              a(href="/users/register") Register now!
          br
          br
          .form-group
            img.img-fluid(src='/images/spotify.svg' width="30" height="30")
            a.badge.badge-primary(href="/users/login/spotify" style="margin-left: 10px") Login with Spotify
          .modal-footer
            button.btn.btn-secondary(type='button', data-dismiss='modal') Close
            button.btn.btn-primary(type='submit') Login
